<!-- user_sessions/new.html.erb -->
<div class="container-form">
        <h1>Login page</h1>
        <%= form_with model: @user, url: user_sessions_path do |f| %>
            <div>
                <%= f.label :name %><br>
                <%= f.text_field :name %>
            </div>
            <div>
                <%= f.label :password %><br>
                <%= f.password_field :password %>
            </div>
            <p>
                <%= f.submit 'Login', class: 'btn-login' %>
            </p>
        <% end %>
        <p class="link">
            <%= link_to 'Signup', '/users/new', class: 'btn-signup' %>
        </p>
    </div>